@model EntityLayer.Concrete.Writer
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Mvc Kamp Yazar Kayıt</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">
    <script src="https://www.google.com/recaptcha/api.js"></script>
</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-2">
                    <h2 class="heading-section">Mvc Proje Kampı Yazar Kayıt</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">

                        @using (Html.BeginForm("AddWriter", "Register", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @placeholder = "Adınız" })
                                @Html.ValidationMessageFor(x => x.WriterName)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control", @placeholder = "Soyadınız" })
                                @Html.ValidationMessageFor(x => x.WriterSurname)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @placeholder = "Mail Adresi" })
                                @Html.ValidationMessageFor(x => x.WriterMail)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", @placeholder = "******" })
                                @Html.ValidationMessageFor(x => x.WriterPassword)
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control", @placeholder = "Ünvanınız" })
                                @Html.ValidationMessageFor(x => x.WriterTitle)
                            </div>
                            <div class="form-group">
                                 @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control", @placeholder = "Hakkınızda" })
                                 @Html.ValidationMessageFor(x => x.WriterAbout)
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Kayıt Ol</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>
</body>
</html>
